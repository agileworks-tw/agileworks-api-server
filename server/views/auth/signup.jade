extends ../layout


block body
  #home.container(style='max-width:800px;margin-top:100px;')
    .row
      .col-sm-4
        img.img-thumbnail(src='/public/assets/images/book-cover.jpg', alt='book', width='280')
      .col-sm-8
        .promotion
          h3 Jenkins Workshop
          
          form(method='post', action='/rest/auth/register')
            input(type='hidden', name='[coupon][serial]', value=serial)
            .form-group
              label(for='email') 
              input#email.form-control(type='email', placeholder='email', name='[user][email]')
            .form-group
              label(for='username') 
              input#username.form-control(type='text', placeholder='username', name='[user][username]')
            .form-group
              label(for='password') 
              input#password.form-control(type='password', placeholder='password', name='[user][password]')


            button.btn.btn-primary(type='submit') register
